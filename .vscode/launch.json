    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Отладка lab",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/lab",
            "args": ["test/source/lab/04.test"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Задать для варианта приложения дизассемблирования значение Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}